<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@layout/customborder"
    android:layout_margin="2sp"
    android:padding="8sp"
    >


    <TextView
        android:id="@+id/surveyResultText"
        android:layout_width="379dp"
        android:layout_height="35dp"
        android:fontFamily="@font/lora"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/surveyResultValueTo"
        android:layout_width="181dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/lora"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/surveyResultTypeText"
        app:layout_constraintTop_toBottomOf="@+id/surveyResultValueFrom" />

    <TextView
        android:id="@+id/surveyResultValueFrom"
        android:layout_width="181dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/surveyResultTypeText"
        app:layout_constraintTop_toBottomOf="@+id/surveyResultText" />

    <TextView
        android:id="@+id/surveyResultTypeText"
        android:layout_width="133dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lora"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surveyResultText" />
</androidx.constraintlayout.widget.ConstraintLayout>